    <script data-cfasync="false">
        //DarkMode 实时选中状态
        $("#dark-mode").change(function () {
            var b = $(this).is(":checked");
            // console.log("b " +b);
            if(b){
                setDark("true");
                localStorage.setItem("darkmode", "true");
            }else{
                setDark("false");
                localStorage.setItem("darkmode", "false");
            }
            
        });
        
        // 判断上次使用是否选择暗黑模式
        $(function () {
            if(localStorage.getItem("darkmode")===null){
                localStorage.setItem("darkmode","false");
              }
            if (localStorage.getItem("darkmode") === "true") {
                // console.log("lo dac true " + localStorage.getItem('darkmode'));
                $("#dark-mode").prop("checked", "checked");
                setDark("true");
                localStorage.setItem('darkmode', "true");
            }else{
                // console.log("lo dac false " + localStorage.getItem('darkmode'));
                setDark("false");
                $("#dark-mode").prop("checked", "");
                localStorage.setItem('darkmode', "false");
            }
        });
        
        // 调用此函数执行CSS更替
        function setDark(isdark){
            $('.hgnuoj-darkmode').remove()
            if(isdark === "true"){
                // console.log("isdark = 1");
              $('head').append('<link rel="stylesheet" class="hgnuoj-darkmode" href="https://cdn.jsdelivr.net/gh/hgnu/hgnuoj@master/static/themes/Dark.min.css?v=20210314" type="text/css">');
            }
            $('head').append('<link href="<%- selfLib("style.css") %>?20181212" rel="stylesheet">');
        }
    </script> 
    
